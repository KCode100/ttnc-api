# ===========================================
# TTNC API - Environment Configuration
# ===========================================
# Copy this file to .env and fill in all values
# All variables are REQUIRED unless marked optional

# TTNC Credentials (from your TTNC dashboard)
TTNC_USERNAME=your_username
TTNC_PASSWORD=your_password
TTNC_VKEY=your_vkey
TTNC_NUMBER=your_ttnc_number

# API Security
# Generate with: openssl rand -hex 32
# Must be at least 32 characters
API_KEY=your-secret-api-key-min-32-chars

# Server Configuration
PORT=3000

# CORS (optional) - restrict to your frontend domain in production
# CORS_ORIGIN=https://your-app.com

# Node environment (optional)
# NODE_ENV=production
